<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nanodegree Apps"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/spotify_streamer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp"
        android:layout_alignLeft="@+id/capstone_button"
        android:layout_alignStart="@+id/capstone_button"
        android:layout_alignRight="@+id/capstone_button"
        android:layout_alignEnd="@+id/capstone_button"
        android:layout_centerHorizontal="true"
        android:onClick="openSpotifyStreamerApp"
        android:background="@drawable/button"/>

    <Button
        android:id="@+id/scores_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Football Scores"
        android:layout_below="@+id/spotify_streamer_button"
        android:layout_alignRight="@+id/capstone_button"
        android:layout_alignEnd="@+id/capstone_button"
        android:layout_alignLeft="@+id/capstone_button"
        android:layout_alignStart="@+id/capstone_button"
        android:layout_marginTop="5dp"
        android:background="@drawable/button"
        android:onClick="openScoresApp" />

    <Button
        android:id="@+id/library_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:layout_below="@+id/scores_button"
        android:layout_alignLeft="@+id/capstone_button"
        android:layout_alignStart="@+id/capstone_button"
        android:layout_alignRight="@+id/capstone_button"
        android:layout_alignEnd="@+id/capstone_button"
        android:layout_marginTop="5dp"
        android:background="@drawable/button"
        android:onClick="openLibraryApp"/>

    <Button
        android:id="@+id/build_it_bigger_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:layout_below="@+id/library_button"
        android:layout_alignLeft="@+id/capstone_button"
        android:layout_alignStart="@+id/capstone_button"
        android:layout_alignRight="@+id/capstone_button"
        android:layout_alignEnd="@+id/capstone_button"
        android:layout_marginTop="5dp"
        android:background="@drawable/button"
        android:onClick="openMakeItBiggerApp"/>

    <Button
        android:id="@+id/xyz_reader_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:layout_below="@+id/build_it_bigger_button"
        android:layout_alignLeft="@+id/capstone_button"
        android:layout_alignStart="@+id/capstone_button"
        android:layout_alignRight="@+id/capstone_button"
        android:layout_alignEnd="@+id/capstone_button"
        android:layout_marginTop="5dp"
        android:background="@drawable/button"
        android:onClick="openReaderApp"/>

    <Button
        android:id="@+id/capstone_button"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own App"
        android:layout_below="@+id/xyz_reader_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/capstone_button"
        android:onClick="openCapstoneApp"/>

</RelativeLayout>
